{% extends 'base.html.twig' %}

{% block title %}Books{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Books</h1>
    <a href="{{ path('app_book_new') }}" class="btn btn-primary">Create new Book</a>
</div>

<div class="row">
    {% for book in books %}
        <div class="col-md-6 col-lg-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ book.title }}</h5>
                    <p class="card-text">
                        <strong>Author:</strong> {{ book.author.name }}<br>
                        <strong>Year:</strong> {{ book.year }}
                    </p>
                    <div class="btn-group" role="group">
                        <a href="{{ path('app_book_show', {'id': book.id}) }}" class="btn btn-outline-primary btn-sm">View</a>
                        <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="btn btn-outline-secondary btn-sm">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12">
            <div class="alert alert-info">
                <h4>No books found</h4>
                <p>Get started by creating your first book.</p>
                <a href="{{ path('app_book_new') }}" class="btn btn-primary">Create Book</a>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
