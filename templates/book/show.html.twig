{% extends 'base.html.twig' %}

{% block title %}Book: {{ book.title }}{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>{{ book.title }}</h1>
    <div>
        <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="btn btn-primary me-2">Edit</a>
        <a href="{{ path('app_book_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Book Details</h5>
                <table class="table">
                    <tr>
                        <th>Title</th>
                        <td>{{ book.title }}</td>
                    </tr>
                    <tr>
                        <th>Year</th>
                        <td>{{ book.year }}</td>
                    </tr>
                    <tr>
                        <th>Author</th>
                        <td>
                            <a href="{{ path('app_author_show', {'id': book.author.id}) }}" class="text-decoration-none">
                                {{ book.author.name }}
                            </a>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Author Information</h5>
                <p><strong>Name:</strong> {{ book.author.name }}</p>
                <p><strong>City:</strong> {{ book.author.city }}</p>
                <p><strong>Total Books:</strong> {{ book.author.books|length }}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
