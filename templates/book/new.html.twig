{% extends 'base.html.twig' %}

{% block title %}New Book{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Create new Book</h1>
    <a href="{{ path('app_book_index') }}" class="btn btn-secondary">Back to list</a>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.title) }}
                        {{ form_widget(form.title) }}
                        {{ form_errors(form.title) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.year) }}
                        {{ form_widget(form.year) }}
                        {{ form_errors(form.year) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.author) }}
                        {{ form_widget(form.author) }}
                        {{ form_errors(form.author) }}
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{{ path('app_book_index') }}" class="btn btn-secondary me-md-2">Cancel</a>
                        <button class="btn btn-primary">{{ button_label|default('Create') }}</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
