{% extends 'base.html.twig' %}

{% block title %}Layout: {{ layout.name }}{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>{{ layout.name }}</h1>
    <div>
        <a href="{{ path('app_layout_edit', {'id': layout.id}) }}" class="btn btn-primary me-2">Edit</a>
        <a href="{{ path('app_layout_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Layout Preview</h5>
            </div>
            <div class="card-body">
                {{ renderedLayout|raw }}
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5>Layout Details</h5>
                <table class="table">
                    <tr>
                        <th>Name</th>
                        <td>{{ layout.name }}</td>
                    </tr>
                    <tr>
                        <th>Entity Type</th>
                        <td>{{ layout.entityType ?? 'Generic' }}</td>
                    </tr>
                    <tr>
                        <th>Entity ID</th>
                        <td>{{ layout.entityId ?? 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th>Is Default</th>
                        <td>{{ layout.isDefault ? 'Yes' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>Blocks</th>
                        <td>{{ layout.blocks|length }}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
