{% extends 'base.html.twig' %}

{% block title %}Authors{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Authors</h1>
    <a href="{{ path('app_author_new') }}" class="btn btn-primary">Create new Author</a>
</div>

<div class="row">
    {% for author in authors %}
        <div class="col-md-6 col-lg-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ author.name }}</h5>
                    <p class="card-text">
                        <strong>City:</strong> {{ author.city }}<br>
                        <strong>Books:</strong> {{ author.books|length }}
                    </p>
                    <div class="btn-group" role="group">
                        <a href="{{ path('app_author_show', {'id': author.id}) }}" class="btn btn-outline-primary btn-sm">View</a>
                        <a href="{{ path('app_author_edit', {'id': author.id}) }}" class="btn btn-outline-secondary btn-sm">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12">
            <div class="alert alert-info">
                <h4>No authors found</h4>
                <p>Get started by creating your first author.</p>
                <a href="{{ path('app_author_new') }}" class="btn btn-primary">Create Author</a>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
